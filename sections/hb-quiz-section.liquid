{{ 'hb-quiz-section.css' | asset_url | stylesheet_tag }}
<div class="hb_quiz_section">
  <div class="container">
    <div class="hp-wrapper">
      <div class="hb_main-grid">
        <div class="hb-content">
          {%- if section.settings.title != blank -%}
            <h2 class="hb-h2 title_bottom">{{ section.settings.title }}</h2>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <div class="hb_small_p  text_bottom">{{ section.settings.text }}</div>
          {%- endif -%}
          {%- if section.settings.mobile_image != blank -%}
            <div class="hb-img mobile {% if section.settings.full_image %}full_image {% endif %}">
              <img
                src="{{ section.settings.mobile_image |  image_url: width: '800x' }}"
                alt="{{  section.settings.mobile_image.alt }}"
              >
            </div>
          {%- endif -%}
          {%- assign product = collection.products -%}
          {%- render 'hb-price--grid' -%}
          {% render 'hb-btn',
            btnType: section.settings.btn_type,
            btnLabel: section.settings.btn_label,
            btnUrl: section.settings.btn_url
          %}
        </div>
        {%- if section.settings.image != blank -%}
          <div class="hb-img destop">
            <img src="{{ section.settings.image |  image_url: width: '800x' }}" alt="{{  section.settings.image.alt }}">
          </div>
        {%- endif -%}
      </div>
      {%- if section.settings.overlay_text != blank -%}
        <div class="hb_overlay--text">{{ section.settings.overlay_text }}</div>
      {%- endif -%}
      {%- render 'hb_border-img' -%}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Hb Quiz Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titlee"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Url"
    },
    {
      "type": "select",
      "id": "btn_type",
      "label": "Button Type",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "overlay_text",
      "label": "Overlay Text",
      "default": "quiz"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "checkbox",
      "id": "full_image",
      "label": "Full Image"
    }
  ],
  "presets": [
    {
      "name": "Hb Quiz Section"
    }
  ]
}
{% endschema %}
