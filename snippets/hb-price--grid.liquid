{%- if template.name == 'product' -%}
  <div class="hb_price--grid">
    <div class="hb-iocn padding-right">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M19 12L5 12" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M14 17L19 12" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M14 7L19 12" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    {% if product.compare_at_price != blank %}
      <div class="hb_price--compare-at hb_price padding-right">{{ product.compare_at_price | money }}</div>
    {% endif %}
    <div class="hb_price--original hb_price padding-right">{{ product.price }}</div>
    <div class="hb_descount--pirce padding-right">
      Du sparst {{ product.compare_at_price | money | minus: product.price | money }}
    </div>
  </div>
{%- endif -%}
