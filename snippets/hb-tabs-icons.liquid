<div class="hb-row">
  {%- for block in section.blocks -%}
    {%- if block.type == 'select_icon' -%}
      <div class="hb-grid">
        <div class="hb-tabs" js-hb-tabs>
          <div
            class="hb-icon"
            style="--max-width:{{ block.settings.max_width }}px; --max-width-mob:{{ block.settings.max_width_mobile }}px"
          >
            <img src="{{ block.settings.icon_image | image_url: width:"90x" }}" alt="">
          </div>
          {%- if block.settings.title != blank -%}
            <h2 class="hb-h2">{{ block.settings.title }}</h2>
          {%- endif -%}
        </div>
        {%- if block.settings.title != blank -%}
          <div class="hb_tab-content">
            {%- if block.settings.description != blank -%}
              <p class="hb-p">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endfor -%}
</div>
{%- for block in section.blocks -%}
  {%- if block.type == 'select_icon' -%}
    {%- if block.settings.title != blank -%}
      <div class="hb_tab-content mobile" js-hb-tab-content>
        {%- if block.settings.description != blank -%}
          <p class="hb-p">{{ block.settings.description }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}
  {%- endif -%}
{%- endfor -%}
